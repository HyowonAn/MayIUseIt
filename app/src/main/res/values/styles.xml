<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Welcome Theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="kaTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/kakao_button_color</item>
        <item name="android:textColor">#000</item>

    </style>

    <style name="facebookTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/facebook_button_color</item>

    </style>

    <style name="defaultButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/disable_button_color</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="naverTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/naver_button_color</item>
    </style>


    <style name="CharacterOverflow">
        <item name="android:textColor">@color/colorError</item>
    </style>


</resources>
